{
  "name": "calendar-task-management",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "b": "pnpm --filter @calendar-task-management/backend",
    "w": "pnpm --filter @calendar-task-management/webapp",
    "sh": "pnpm --filter @alendar-task-management/shared",
    "dev": "pnpm -r --parallel dev",
    "test": "pnpm -r test",
    "prettify": "pnpm -r --parallel prettify",
    "types": "concurrently 'pnpm b types' 'pnpm w types' 'pnpm sh types'",
    "lint": "concurrently 'pnpm b lint' 'pnpm w lint' 'pnpm sh lint'",
    "prepare": "husky"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.16",
    "concurrently": "^9.1.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.23.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^16.0.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "3.5.3",
    "ts-jest": "^29.3.2",
    "ts-patch": "^3.3.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0",
    "typescript-transform-paths": "^3.5.5"
  },
  "dependencies": {
    "superjson": "^1.13.1"
  }
}
